package model;

import exception.InvalidInputException;

public class ParkingEvent {

    private User user;
    private Scooter scooter;
    private boolean correctParking;

    public ParkingEvent(User user, Scooter scooter, boolean correctParking) {
        this.user = user;
        this.scooter = scooter;
        this.correctParking = correctParking;
    }

    public void validate() {
        if (user == null || scooter == null) {
            throw new InvalidInputException("User or Scooter is missing");
        }
    }

    public void applyReward() {
        if (correctParking) {
            user.addBonusMinutes(5);
        } else {
            user.decreaseRating();
        }
    }

    public User getUser() {
        return user;
    }

    public Scooter getScooter() {
        return scooter;
    }

    public boolean isCorrectParking() {
        return correctParking;
    }
}
